@using CRM.Domain.ViewModels.Common
@model PagingViewModel

<div class="row mt-4">
    <div class="col-12 pl-3">
        <nav>
            <ul class="pagination pagination-gutter pagination-primary pagination-sm no-bg">

                @if (Model.StartPage < Model.CurrentPage)
                {
                    <li class="page-item page-indicator"><a class="page-link" onclick="fillPageId(@Model.CurrentPage - 1)"><i class="la la-angle-right"></i></a></li>
                }

                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active"><a class="page-link" onclick="fillPageId(@i)">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" onclick="fillPageId(@i)">@i</a></li>
                    }

                }

                @if (Model.EndPage > Model.CurrentPage)
                {
                    <li class="page-item page-indicator"><a class="page-link" onclick="fillPageId(@Model.CurrentPage + 1)"><i class="la la-angle-left"></i></a></li>
                }
            </ul>
        </nav>
    </div>
</div>
