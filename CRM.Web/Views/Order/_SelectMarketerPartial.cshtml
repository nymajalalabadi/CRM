@using CRM.Application.Extensions
@using CRM.Domain.Entities.Account
@using CRM.Domain.ViewModels.Orders
@model OrderSelectMarketerViewModel

@{
    var marketerList = ViewBag.Marketers as List<Marketer>;
}

<div class="row">
    <div class="col-lg-12">
        <h4>انتخاب بازار یاب برای مشتری</h4>
    </div>
    <div class="col-lg-12">
        <form asp-action="SelectMarketerModal" asp-controller="order" method="post" data-ajax="true"
              data-ajax-method="Post" data-ajax-begin="StartLoading()"
              data-ajax-complete="EndLoading()"
              data-ajax-success="SelectOrderMarketerDone">
            <input type="hidden" asp-for="OrderId" />
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>انتخاب بازاریاب</label>
                    <select class="form-control" asp-for="MarketerId">
                        @foreach (var marketer in marketerList!)
                        {
                            <option value="@marketer.UserId">@marketer.User.GetUserShowName()</option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Description"> </label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success btn-block">افزودن </button>
            </div>
        </form>
    </div>
</div>