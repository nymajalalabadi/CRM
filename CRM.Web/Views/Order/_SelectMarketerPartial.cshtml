@using CRM.Application.Extensions
@using CRM.Domain.Entities.Account
@using CRM.Domain.ViewModels.Orders
@model OrderSelectMarketerViewModel

@{
    var marketerList = ViewBag.Marketers as List<Marketer>;
}

<div class="row">
    <div class="col-lg-12">
    <h4>انتخاب بازار یاب برای مشتری</h4>
    </div>
    <div class="col-lg-12">
    <form method="post" id="SelectedMarketerForm">
        <input type="hidden" asp-for="OrderId" />
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>انتخاب بازاریاب</label>
                    <input type="hidden" name="MarketerId" id="MarketerId2" />
                    <select class="form-control" onchange="onclickSelect(this)">
                        @foreach (var marketer in marketerList!)
                        {
                            <option value="@marketer.UserId">@marketer.User.GetUserShowName()</option>
                        }
                    </select>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Description"> </label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </form>
    </div>
</div>