@model CRM.Domain.ViewModels.Company.EditCompanyViewModel

@{
    ViewData["Title"] = "ویرایش شرکت";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">ویرایش شرکت</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form asp-action="EditCompany" asp-controller="Company" method="post" id="filter-search">
                        <input type="hidden" asp-for="Id" class="form-control">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Name"> </label>
                                <input asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Code"></label>
                                <input asp-for="Code" class="form-control">
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="City"></label>
                                <input asp-for="City" class="form-control">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="MobilePhone"></label>
                                <input asp-for="MobilePhone" class="form-control">
                                <span asp-validation-for="MobilePhone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="IntroduceName"></label>
                                <input asp-for="IntroduceName" class="form-control">
                                <span asp-validation-for="IntroduceName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="AgentName"></label>
                                <input asp-for="AgentName" class="form-control">
                                <span asp-validation-for="AgentName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" class="form-control">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label asp-for="Description"></label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-warning">ویرایش</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_JqueryValidators" />
}