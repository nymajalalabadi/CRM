@using CRM.Application.Extensions
@using CRM.Domain.Entities.Tasks
@model CRM.Domain.ViewModels.Tasks.TaskDetailViewModel

@{
    ViewData["Title"] = "جزئیات تسک";
}

<div class="row">
    <div class="col-xl-4">
        <div class="card text-white bg-danger">
            <div class="card-header">
                <h5 class="card-title text-black">اطلاعات مشتری</h5>
            </div>
            <div class="card-body mb-0">
                <p class="card-text">بازاریاب : @Model.User.GetUserShowName()</p>
                <p class="card-text">توضیحات : @Model.Description</p>
                <p class="card-text">اولویت : @Model.Priority</p>
                <p class="card-text">تاریخ انجام : @Model.UntilDate</p>
                <p class="card-text">تاریخ ثبت : @Model.CreateDate</p>
                <p class="card-text">وضعیت تسک : <span class="badge light badge-primary">@Model.CrmTaskStatus.GetEnumDisplayName() </span></p>
                @if (Model.CrmTaskStatus != CrmTaskStatus.Close)
                {
                    <a asp-controller="Task" asp-action="ChangeTaskStateToClose" asp-route-taskId="@Model.TaskId" class="btn btn-success" onclick="ConfirmBtn(event)">بستن تسک</a>
                }
                <a asp-controller="MarketingAction" asp-action="CreateAction" asp-route-taskId="@Model.TaskId" class="btn btn-info">افزودن عملیات جدید</a>
            </div>
        </div>
    </div>
</div>

